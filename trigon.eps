%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 5 5 400 600
%%LanguageLevel: 2

%This is an attempt to produce an 2D tile
%based on filled triangles
%The tile may be rotated with 90 degres


/s1{
  gsave
  0 0 moveto
  2.5 0 lineto
  0 2.5 lineto
  closepath
  fill
  5 5 moveto
  2.5 5 lineto
  5 2.5 lineto
  closepath
  fill
  grestore
  stroke
}def

/s2{
  gsave
  5 0 moveto
  2.5 0 lineto
  5 2.5 lineto
  closepath
  fill
  0 5 moveto
  2.5 5 lineto
  0 2.5 lineto
  closepath
  fill
  grestore
  stroke
}def

/sym [  //s2 //s1 ] def
/range sym length def
/rNum {rand range mod} def

/drawsym {
    /k exch def
    sym k get exec
}def

%Initial setup
5 5 scale
0 setlinewidth
2 2 translate

%Start drawing

%horizontal boxes >> 15
%veritcal boxes >> 22

31 {

  0 1 22 {
    % select a random symbol to be drawn
    % /i exch def
    % i drawsym
	rNum drawsym
    5 0 translate
  } for

  %go up one row
  -115 5 translate
} repeat


showpage
%%EOF
