%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 5 5 400 600
%%LanguageLevel: 2

%This is an attempt to produce an 2D tile
%based on filled triangles
%The tile may be rotated with 90 degres


/s1{
  gsave
  0 0 moveto
  5 0 lineto
  0 5 lineto
  closepath
  fill
  grestore
  stroke
}def

% '
% |\
% |_\


/s2{
  gsave
  0 0 moveto
  0 5 lineto
  5 5 lineto
  closepath
  fill
  grestore
  stroke
}def

%  __
% | /
% |/
% '


/s3{
  gsave
  5 5 moveto
  5 0 lineto
  0 5 lineto
  closepath
  fill
  grestore
  stroke
}def

% __
% \ |
%  \|
%   '


/s4{
  gsave
  0 0 moveto
  5 5 lineto
  5 0 lineto
  closepath
  fill
  grestore
  stroke
}def


%   .
%  /|
% /_|

/sym [  //s1 //s2 //s3 //s4 ] def
/range sym length def
/rNum {rand range mod} def

/drawsym {
    /k exch def
    sym k get exec
}def

%Initial setup
5 5 scale
0 setlinewidth
2 2 translate

%Start drawing

%horizontal boxes >> 15
%veritcal boxes >> 22

31 {

  0 1 22 {
    % select a random symbol to be drawn
    % /i exch def
    % i drawsym
	rNum drawsym
    5 0 translate
  } for

  %go up one row
  -115 5 translate
} repeat


showpage
%%EOF
